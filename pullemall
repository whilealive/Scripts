#!/bin/bash
# ==================================================================
# FILE     pullhemall
# MACHINE  all
# INFO     pulls all my git repositories at once
#
# DATE     16.07.2014
# OWNER    Bischofberger
# ==================================================================

#TODO: pull all branches at once

declare -a Repo=(
    "$HOME/Dotfiles/" \
    "$HOME/Build/" \
)

die(){
    echo -e "$0: Error: $1" >&2
    exit 1
}

for path in "${Repo[@]}" ; do
    cd $path
    pwd
    git pull origin master
done

exit 0
