#!/bin/bash
# ==================================================================
# FILE     pullemall
# OS       linux
# MACHINE  all
# INFO     pulls all my git repositories at once
#
# DATE     28.03.2025
# OWNER    Bischofberger
# ==================================================================

GitHubReposFile="$HOME/Scripts/data/GitOnGitHub.txt"

# my github repositories
mapfile -t Repos <$GitHubReposFile

for path in "${Repos[@]}" ; do
	eval cd $path
	pwd
	git pull origin main
	echo ""
done

exit 0
